<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/donation_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:background="@drawable/card" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical|left"
        android:minHeight="40dp"
        android:singleLine="true"
        android:text="New Fund Raising Campaign"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/donate"
        style="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="#E44460"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:minHeight="35dp"
        android:onClick="onDonate"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Donate"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="15dp"
        android:layout_height="8dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView1"
        android:background="@color/yellow"
        android:indeterminate="false" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/progressBar1"
        android:layout_below="@+id/progressBar1"
        android:layout_marginTop="16dp"
        android:text="$998 \n out of $2000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="12 \n contributors"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/donate"
        android:layout_alignTop="@+id/textView4"
        android:text="10 \n days to go"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView1"
        android:text="28%" />

</RelativeLayout>